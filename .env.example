# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Database Configuration
# Format: postgresql://username:password@host:port/database
# Example: postgresql://readonly_user:password@localhost:5432/mydb
DATABASE_URL=postgresql://user:password@localhost:5432/database

# Note: For security, use a read-only database user with SELECT-only permissions
# CREATE USER readonly_user WITH PASSWORD 'your_password';
# GRANT CONNECT ON DATABASE your_db TO readonly_user;
# GRANT USAGE ON SCHEMA public TO readonly_user;
# GRANT SELECT ON ALL TABLES IN SCHEMA public TO readonly_user;
